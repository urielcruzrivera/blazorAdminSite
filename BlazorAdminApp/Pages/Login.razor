@page "/login"
@inject IAuthenticationService AuthenticationService
@inject NavigationManager NavigationManager

@using BlazorAdminApp.Services

<RadzenRow Gap="0" Class="rz-my-12 rz-mx-auto rz-border-radius-6 rz-shadow-10" Style="width: 100%; max-width: 800px; overflow: hidden;margin-bottom:0px !important">
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenCard Class="rz-shadow-0 rz-border-radius-0 rz-text-align-center rz-p-12" Style="height: 100%; background: var(--rz-primary-light) no-repeat 100% 70% fixed url('data:image/svg+xml;base64,')">
            <RadzenText TextStyle="TextStyle.DisplayH4" TagName="TagName.H2" Class="rz-color-white rz-mb-6">Bienvenido a SIAN</RadzenText>
            <RadzenText TextStyle="TextStyle.H6" Class="rz-color-white">Ingrese sus credenciales para ingresar al sistema</RadzenText>
        </RadzenCard>
    </RadzenColumn>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenCard Class="rz-shadow-0 rz-border-radius-0 rz-p-12">
            <RadzenText TextStyle="TextStyle.H5" TagName="TagName.H2" Class="rz-mb-6">
                Iniciar Sesión
            </RadzenText>
            <RadzenTemplateForm Data=@("SimpleLogin")>
                <RadzenLogin AllowRegister="false" AllowResetPassword="false" Login=@OnLogin UserText="Usuario" PasswordText="Contraseña"
                             UserRequired="El usuario es requerido" PasswordRequired="La contraseña es requerida" />
                @if (loading)
                {
                    <span class="spinner-border spinner-border-sm mr-1"></span>
                }
            </RadzenTemplateForm>
        </RadzenCard>
    </RadzenColumn>
</RadzenRow>
<RadzenRow Gap="0" Class="rz-mx-auto" Style="width: 100%; max-width: 800px; overflow: hidden;">
    <RadzenAlert AlertStyle="AlertStyle.Danger" ShowIcon="false" Variant="Variant.Flat" Shade="Shade.Lighter" @ref="alert" @bind-Visible="isAlertVisible">
        @error
    </RadzenAlert>
</RadzenRow>

@code {
    private bool loading;
    private string error;
    private RadzenAlert alert;
    private bool isAlertVisible = false;
    private System.Timers.Timer timer;

    protected override void OnInitialized()
    {
        if (AuthenticationService.usuarioSession != null)
        {
            NavigationManager.NavigateTo("");
        }
    }

    private async void OnLogin(LoginArgs args)
    {
        loading = true;
        try
        {
            await AuthenticationService.Login(args.Username, args.Password);

            var returnUrl = NavigationManager.GetUriWithQueryParameter("returnUrl", false);
            if (returnUrl == "returnUrl")
                NavigationManager.NavigateTo(returnUrl);
            else
                NavigationManager.NavigateTo("");
        }
        catch (Exception ex)
        {
            error = ex.Message;
            loading = false;
            ShowAlert();
            StateHasChanged();
        }
    }

    private void ShowAlert()
    {
        isAlertVisible = true;
        // Initialize and start the timer
        timer = new System.Timers.Timer(5000); // 3000 ms = 3 seconds
        timer.Elapsed += HideAlert;
        timer.AutoReset = false; // Ensures the timer fires only once
        timer.Start();
    }

    private void HideAlert(object source, System.Timers.ElapsedEventArgs e)
    {
        InvokeAsync(() =>
        {
            isAlertVisible = false;
            timer.Dispose(); // Clean up the timer
            StateHasChanged(); // Notify the component to re-render
        });
    }
}